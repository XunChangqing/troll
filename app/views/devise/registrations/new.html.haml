%h2= t('common.sign_up')
= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
  = devise_error_messages!
  .form-group
    = f.label :email
    %br/
    = f.email_field :email, autofocus: true, class: 'form-control', placeholder: t('user.email')
  .form-group
    = f.label :password
    - if @minimum_password_length
      %em
        (#{@minimum_password_length} characters minimum)
    %br/
    = f.password_field :password, autocomplete: "off", class: 'form-control', placeholder: t('user.password')
  .form-group
    = f.label :password_confirmation
    %br/
    = f.password_field :password_confirmation, autocomplete: "off", class: 'form-control', placeholder: t('user.password_confirmation')
  .actions
    = f.submit t('common.sign_up'), class: "btn btn-primary"
= render "devise/shared/links"
